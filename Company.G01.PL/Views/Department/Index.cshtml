

@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>
<br />
<br />

<a asp-action="Index" asp-controller="Department" class="btn btn-primary">Create Department</a>

<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Date Of Creation</th>
                <th>Detalis</th>
                <th>Update</th>
                <th>Delate</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.CreatAt</td>
                    <td>
                        <a asp-action="Details " class="btn btn-warning">Details</a> 
                    </td>
                    <td>
                        <a asp-action="Edit " class="btn btn-success">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete " class="btn btn-danger">Delate</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-danger">
        <h4>There Are No Department :(</h4>
    </div>
}

